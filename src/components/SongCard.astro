---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  artwork: ImageMetadata;
  comingSoon?: boolean;
}

const { title, artwork, comingSoon = false } = Astro.props;
---

<div class="bg-nf-charcoal rounded-xl overflow-hidden border border-nf-warm-gray/20 w-[350px]">
  <div class="relative">
    <Image
      src={artwork}
      alt={`${title} artwork`}
      width={225}
      class="w-full aspect-square object-cover"
    />
    {comingSoon && (
      <div class="absolute inset-0 bg-nf-dark/60 flex items-center justify-center">
        <span class="font-display text-3xl tracking-widest text-nf-accent border-2 border-nf-accent px-6 py-2 rotate-[-6deg]">
          COMING SOON
        </span>
      </div>
    )}
  </div>
  <div class="p-4">
    <h3 class="font-display text-2xl text-nf-cream mb-3">{title}</h3>
    <slot />
  </div>
</div>
