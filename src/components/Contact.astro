<section id="contact" class="py-20 px-6 bg-nf-charcoal/30">
  <div class="max-w-6xl mx-auto">
    <h2 class="font-display text-5xl md:text-6xl text-center mb-12 text-nf-cream">Contact</h2>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact form -->
      <form
        action="https://formspree.io/f/xqaeanwk"
        method="POST"
        class="space-y-6"
      >
        <!-- Honeypot spam field -->
        <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" />

        <div>
          <label for="name" class="block font-display text-lg tracking-wider text-nf-cream mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full bg-nf-dark border border-nf-warm-gray/30 rounded-lg px-4 py-3 text-nf-cream placeholder:text-nf-warm-gray focus:outline-none focus:border-nf-accent transition-colors"
            placeholder="Your name"
          />
        </div>

        <div>
          <label for="email" class="block font-display text-lg tracking-wider text-nf-cream mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full bg-nf-dark border border-nf-warm-gray/30 rounded-lg px-4 py-3 text-nf-cream placeholder:text-nf-warm-gray focus:outline-none focus:border-nf-accent transition-colors"
            placeholder="your@email.com"
          />
        </div>

        <div>
          <label for="message" class="block font-display text-lg tracking-wider text-nf-cream mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            required
            rows="5"
            class="w-full bg-nf-dark border border-nf-warm-gray/30 rounded-lg px-4 py-3 text-nf-cream placeholder:text-nf-warm-gray focus:outline-none focus:border-nf-accent transition-colors resize-y"
            placeholder="Your message..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full md:w-auto font-display text-xl tracking-widest bg-nf-accent text-nf-dark px-10 py-3 rounded-lg hover:bg-nf-accent/80 transition-colors cursor-pointer"
        >
          Send
        </button>
      </form>

      <!-- Contact info -->
      <div class="flex flex-col justify-center gap-8">
        <div>
          <h3 class="font-display text-2xl text-nf-cream mb-2">Booking & Inquiries</h3>
          <a
            href="mailto:noflinch.official@gmail.com"
            class="text-nf-accent hover:text-nf-accent/80 transition-colors text-lg"
          >
            noflinch.official@gmail.com
          </a>
        </div>

        <div>
          <h3 class="font-display text-2xl text-nf-cream mb-4">Follow Us</h3>
          <div class="flex items-center gap-6">
            <!-- Instagram -->
            <a
              href="https://instagram.com/officialnoflinch"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow No Flinch on Instagram"
              class="text-nf-cream hover:text-nf-accent transition-colors"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
